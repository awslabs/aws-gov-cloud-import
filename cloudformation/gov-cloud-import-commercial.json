                                    "logs:PutLogEvents",
                                    "ssm:GetParameter",
                                    "states:SendTaskSuccess",
                                    "ec2:DeleteVolume",
                                    "logs:CreateLogStream",
                                    "states:SendTaskFailure",
                                    "s3:ListAllMyBuckets",
                                    "sts:GetCallerIdentity",
                                    "s3:HeadBucket",
                                    "s3:ListObjects",
                                    "states:SendTaskHeartbeat",
                                    "states:GetActivityTask"
                                ],
                                "Resource": "*"
                            },
                            {
                                "Effect": "Allow",
                                "Action": "s3:*",
                                "Resource": [
