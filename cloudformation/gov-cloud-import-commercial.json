    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "gov-cloud-import CloudFormation Template for AWS",
    "Mappings" : {
      "RegionMap" : {
        "us-east-2"      : { "bucket" : "<BUCKET_BASE>"},
        "us-west-2"      : { "bucket" : "<BUCKET_BASE>"}
